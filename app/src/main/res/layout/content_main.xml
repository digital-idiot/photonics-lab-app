<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_stats" tools:context=".StatsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <TextView android:text="Concentration - "
        android:id="@+id/concentration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:padding="16dp"
        android:textSize="16dp"
        android:typeface="serif"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <TextView android:text="Pressure  -  "
        android:id="@+id/pressure"
        android:layout_below="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:padding="16dp"
        android:textSize="16dp"
        android:typeface="serif"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>


        <TextView android:text="Date  -  "
            android:id="@+id/date"
            android:layout_below="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:padding="16dp"
            android:textSize="16dp"
            android:typeface="serif"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <TextView android:text="Time  -  "
            android:id="@+id/time"
            android:layout_below="@+id/pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:padding="16dp"
            android:textSize="16dp"
            android:typeface="serif"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:text="View Graph"
                android:id="@+id/graphbutton" />

            <Button
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:text="Details"
                android:id="@+id/detailsbutton" />
        </LinearLayout>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_marginTop="20dp"
            android:text="Statistical Information"
            android:id="@+id/statsbutton"/>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>
