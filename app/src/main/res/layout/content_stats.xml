<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_stats" tools:context=".StatsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrolView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:id="@+id/top"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/frm"
                android:layout_weight="0.20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"/>
            <TextView
                android:layout_weight="0.10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to"
                android:textSize="18dp"/>
            <Button
                android:id="@+id/till"
                android:layout_weight="0.20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To"/>

            </LinearLayout>

            <Button
                android:id="@+id/getSats"
                android:layout_weight="0.30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="Show Stats"/>

            <TextView android:text="Concentration Stats"
                android:id="@+id/cstat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2196F3"
                android:padding="16dp"
                android:textSize="16dp"
                android:typeface="serif"
                android:textColor="#FFFFFF"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <TextView android:text="Pressure Stats"
                android:id="@+id/pressure"
                android:layout_below="@+id/pstat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4CAF50"
                android:padding="16dp"
                android:textSize="16dp"
                android:typeface="serif"
                android:textColor="#FFFFFF"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/errs"
        android:layout_above="@+id/scrolView"/>

</RelativeLayout>
